// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/javascript-node
{
  "name": "Next.js with Supabase",

  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers-extra/features/supabase-cli:1": {
      "version": "1.115.5"
    }
  },

  "build": {
    "dockerfile": "Dockerfile"
  },

  // Forward ports for development
  "forwardPorts": [3000, 54321, 54322],
  "portsAttributes": {
    "3000": {
      "label": "Next.js",
      "onAutoForward": "openPreview"
    },
    "54321": {
      "label": "Supabase API"
    },
    "54322": {
      "label": "Supabase Studio"
    }
  },

  // Set up environment automatically
  "onCreateCommand": "chmod +x .devcontainer/scripts/*.sh && .devcontainer/scripts/on-create.sh",
  "postCreateCommand": ".devcontainer/scripts/post-create.sh",
  "waitFor": "onCreateCommand",

  // Configure VS Code settings and extensions
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "dsznajder.es7-react-js-snippets",
        "GitHub.copilot",
        "github.vscode-pull-request-github",
        "ms-vscode.vscode-typescript",
        "ms-vscode.js-debug",
        "Prisma.prisma"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": true
        },
        "typescript.tsdk": "node_modules/typescript/lib",
        "tailwindCSS.includeLanguages": {
          "typescript": "javascript",
          "typescriptreact": "javascript"
        },
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[typescriptreact]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  }
  /* Uncomment to connect as non-root user
  ,"remoteUser": "node"
  */
}
